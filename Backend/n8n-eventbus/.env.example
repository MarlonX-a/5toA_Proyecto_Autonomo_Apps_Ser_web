# ============================================
# n8n Event Bus - Variables de Entorno
# ============================================
# Copiar este archivo a .env y configurar los valores

# ========================================
# n8n Configuration
# ========================================
N8N_USER=admin
N8N_PASSWORD=your_secure_password_here
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=your-32-character-encryption-key

# URL pública de webhooks (para producción)
WEBHOOK_URL=http://localhost:5678/

# Zona horaria
TIMEZONE=America/Bogota

# ========================================
# Database (PostgreSQL)
# ========================================
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_secure_password

# ========================================
# Servicios Internos de FindYourWork
# ========================================
# Django API (Python Backend)
DJANGO_API_URL=http://host.docker.internal:8000

# WebSocket Server (TypeScript/NestJS)
WEBSOCKET_SERVER_URL=http://host.docker.internal:4000

# AI Orchestrator
AI_ORCHESTRATOR_URL=http://host.docker.internal:8001

# Auth Service (NestJS)
AUTH_SERVICE_URL=http://host.docker.internal:3000

# ========================================
# Payment Gateway (Stripe/PayU/MercadoPago)
# ========================================
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
PAYU_MERCHANT_ID=your_payu_merchant_id
PAYU_API_KEY=your_payu_api_key
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_token

# ========================================
# Partner Integration
# ========================================
PARTNER_WEBHOOK_SECRET=your-partner-hmac-secret-key
PARTNER_WEBHOOK_URL=https://partner-api.example.com/webhook
PARTNER_API_KEY=your-partner-api-key

# ========================================
# Email Configuration (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_NAME=FindYourWork
EMAIL_FROM_ADDRESS=noreply@findyourwork.com

# ========================================
# Telegram Bot (Opcional - MCP Input)
# ========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-admin-chat-id

# ========================================
# WhatsApp Business API (Opcional)
# ========================================
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_VERIFY_TOKEN=your-verify-token

# ========================================
# Slack Notifications (Opcional)
# ========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_BOT_TOKEN=xoxb-your-bot-token
